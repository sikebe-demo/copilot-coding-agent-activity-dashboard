{
  "name": "Copilot Coding Agent Activity Dashboard",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "NODE_VERSION": "${localEnv:NODE_VERSION:22}"
    }
  },
  "initializeCommand": "export NODE_VERSION=$(cat .node-version)",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "forwardPorts": [8080],
  "portsAttributes": {
    "8080": {
      "label": "Vite Dev Server",
      "onAutoForward": "openBrowser"
    }
  },
  "postCreateCommand": "npm install && npx playwright install --with-deps chromium",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "ms-playwright.playwright",
        "GitHub.copilot",
        "GitHub.copilot-chat"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "tailwindCSS.includeLanguages": {
          "html": "html",
          "javascript": "javascript"
        }
      }
    }
  }
}
