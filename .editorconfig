# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# JavaScript / TypeScript (main source code)
[*.{js,ts,jsx,tsx}]
indent_size = 4

# HTML
[*.html]
indent_size = 4

# CSS / SCSS
[*.{css,scss,sass}]
indent_size = 2

# JSON / YAML
[*.{json,yml,yaml}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false

# Config files (2-space indentation)
[*.config.{js,ts,mjs}]
indent_size = 2

# Makefile
[Makefile]
indent_style = tab
